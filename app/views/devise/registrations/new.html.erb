<div class="w-full mt-6 bg-white px-4">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mt-2">
    <%= f.text_field :name, autofocus: true, placeholder: 'Name', autocomplete: "name", class: "w-full forms" %>  
  </div>

  <div class="field mt-2">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full forms" %>
  </div>

  <div class="field mt-2">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full forms" %>
  </div>

  <div class="field mt-2">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full forms" %>
  </div>

  <div class="actions  flex flex-col items-center mt-6">
    <%= f.submit "Sign up", class: "btn p-4 rounded-lg text-white" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
